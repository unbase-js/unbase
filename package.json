{
  "name": "unbase-js",
  "version": "0.1.0",
  "private": true,
  "description": "The Edge-First TypeScript BaaS for UnJS ecosystem",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "docs:dev": "turbo run --filter @unbase/docs dev",
    "docs:build": "turbo run --filter @unbase/docs build",
    "docs:preview": "turbo run --filter @unbase/docs preview",
    "types:dev": "turbo run --filter @unbase/types dev",
    "types:build": "turbo run --filter @unbase/types build",
    "types:clean": "turbo run --filter @unbase/types clean",
    "core:dev": "turbo run --filter @unbase/unbase dev",
    "core:build": "turbo run --filter @unbase/unbase build",
    "core:clean": "turbo run --filter @unbase/unbase clean",
    "playground:dev": "turbo run --filter @unbase/playground dev",
    "playground:build": "turbo run --filter @unbase/playground build",
    "playground:clean": "turbo run --filter @unbase/playground clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "nitropack": "^2.6.3",
    "unbuild": "^3.6.1"
  }
}
